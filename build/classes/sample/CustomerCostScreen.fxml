<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CustomerCostScreen">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Bookstore App" />
      </menus>
    </MenuBar>
      <AnchorPane prefHeight="377.0" prefWidth="640.0">
         <children>
            <Label layoutX="142.0" layoutY="75.0" text="Total cost: " />
            <Label layoutX="142.0" layoutY="136.0" text="Points: " />
            <Label layoutX="142.0" layoutY="187.0" text="Membership status: " />
            <Button fx:id="continueShopping"  layoutX="142.0" layoutY="260.0" mnemonicParsing="false" onAction="#continueShopping" text="Continue Shopping" />
            <Button fx:id="logout"            layoutX="409.0" layoutY="260.0" mnemonicParsing="false" onAction="#userLogOut" text="Log Out" />
            <Label fx:id="priceLabel"             layoutX="408.0" layoutY="75.0" text="Sample price" />
            <Label fx:id="pointLabel"             layoutX="408.0" layoutY="136.0" text="Sample points" />
            <Label fx:id="statusLabel"            layoutX="408.0" layoutY="187.0" text="Sample tier" />
         </children>
      </AnchorPane>
  </children>
</VBox>

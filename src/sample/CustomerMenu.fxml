<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CustomerMenu">
  <children>
      <AnchorPane prefHeight="322.0" prefWidth="640.0">
         <children>
            <TableView fx:id="customer_book_table" layoutY="50.0" prefHeight="259.0" prefWidth="640.0">
              <columns>
                <TableColumn fx:id="col_bookname" prefWidth="312.0" text="Book Name" />
                <TableColumn fx:id="col_bookprice" minWidth="0.0" prefWidth="327.0" text="Book Price" />
              </columns>
            </TableView>
            <TextArea fx:id="customer_info" prefHeight="50.0" prefWidth="640.0" text="Welcome ..., you have ... points. Your membership status is ... " />
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="102.0" prefWidth="640.0">
         <children>
            <Button fx:id="buy" layoutX="138.0" layoutY="14.0" mnemonicParsing="false" onAction="#buy" text="Buy" />
            <Button fx:id="redeembuy" layoutX="254.0" layoutY="14.0" mnemonicParsing="false" onAction="#redeemBuy" text="Redeem and Buy" />
            <Button fx:id="logout" layoutX="467.0" layoutY="14.0" mnemonicParsing="false" onAction="#userLogOut" text="Log out" />
         </children>
      </AnchorPane>
  </children>
</VBox>
